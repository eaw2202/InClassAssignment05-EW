<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elysewarren.inclassassignment05_ew.MainActivity">

    <EditText
        android:id="@+id/dog_type"
        style="@style/editText"
        android:hint="@string/dog_breed" />

    <EditText
        android:id="@+id/dog_age"
        style="@style/editText"
        android:hint="@string/age"
        android:inputType="number"/>

    <CheckBox
        android:id="@+id/allergy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_it_hypoallergenic" />

    <EditText
        android:id="@+id/contact_text"
        style="@style/editText"
        android:hint="@string/contact_information" />

    <Button
        android:id="@+id/button_submit"
        style="@style/ButtonStyle"
        android:onClick="submitActivity"
        android:text="@string/submit" />

</LinearLayout>
